@using TimesheetScheduler.Models
@model  JsonRatesAndRoles

<!-- Modal Edit Rates and Roles -->
<div class="modal fade" id="editCreateRolesModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"><span id="headerLabelRolesName"></span></h4>
            </div>
            @using (Ajax.BeginForm("SubmitRoleButton", "User", FormMethod.Post, new AjaxOptions()
            {
                OnSuccess = "GetResult_AddNewRole",
                //OnBegin = "RemoveMask_AddNewRole($(this))",
                OnFailure = "AddNewRoleFailure"
            }, new { id = "RolesForm" }))
            {
                @Html.AntiForgeryToken()
            <div class="modal-body">
                @Html.HiddenFor(x => x.Id, new { id = "hiddenRoleId" })
                <div class="form-group">
                    <div class="LabelAndInputField">
                        @Html.LabelFor(m => m.Role, new { @class = "lblRolesEditModal" })
                        @Html.TextBoxFor(m => m.Role, new { @class = "form-control inputRolesEditModal", id = "roleTxt" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="LabelAndInputField">
                        @Html.LabelFor(m => m.ShortName, new { @class = "lblRolesEditModal" })
                        @Html.TextBoxFor(m => m.ShortName, new { @class = "form-control inputRolesEditModal", id = "shortNameTxt" })
                    </div>
                    @Html.ValidationMessageFor(m => m.ShortName, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <div class="LabelAndInputField">
                        @Html.LabelFor(m => m.Rate, new { @class = "lblRolesEditModal" })
                        @Html.TextBoxFor(m => m.Rate, new { @class = "form-control inputRolesEditModal", id = "rateTxt", placeholder = "0000.00" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Rate, "", new { @class = "text-danger" })
                </div>
            </div>
                <div class="modal-footer">
                    <button id="btnUpdateRoles" name="ButtonType" type="submit" class="btn btn-success" value="UpdateRole">Update</button>
                    <button id="btnCreateRoles" name="ButtonType" type="submit" class="btn btn-success" value="CreateRole">Create</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>


@{
    ViewData["Title"] = "Timesheet Scheduler";
}

@Styles.Render("~/Content/timesheetscheduler")
@Scripts.Render("~/bundles/jquery")

@*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.js"></script>*@
@*<script src="~/Scripts/jQuery-Mask-Plugin-master/src/jquery.mask.js" type="text/javascript"></script>*@ @*try to load in layout.cshtml*@
<script src="~/Scripts/TimesheetSchedulerCalendar.js" type="text/javascript"></script> @*try to load in layout.cshtml*@

<body>
    <div class="container">
        <br />
        <div class="row">
            <div class="form-group col-xs-2 leftContent">

                <br />

                <div>
                    <input id="btnSaveExcelFile" title="Export to Excel file" type="submit" name="" value="">
                    <input id="btnInfo" title="Show month info (days and hours worked)" type="submit" name="" value="">
                </div>

                <br />

                <label for="userNameTimesheet">User</label>
                <select class="form-control" id="userNameTimesheet"></select>

                <br />

                <label for="monthTimesheet">Month</label>
                <select class="form-control" id="monthTimesheet"></select>

                <br />

                <label for="yearTimesheet">Year</label>
                <select class="form-control" id="yearTimesheet"></select>

                <br />

                <label for="divStatDateNotDefined" title="This list show all the items in the timesheet path and signed to a specific user without 'Start Date'">
                    Start Date not defined <span class="spanCountStartDateNotDefined">(0)</span>
                </label>

                <div class="" id="divStatDateNotDefined">
                </div>

            </div>
            <div class="form-group col-xs-10">
                <div id="calendar"></div>
            </div>
        </div>
    </div>

</body>

<!-- Modal Info -->
<div class="modal fade" id="infoModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title H4tTitleInfoModal">INFO</h4>
            </div>
            <div class="modal-body">
                <form class="form-inline">
                    <div class="form-group">
                        <label id="dayWorkedInfoLbl" class="modalLbl" for="dayWorkedInfoTxt">Days Worked: </label>
                        <label id="dayWorkedInfoTxt"></label>
                    </div>
                </form>
                <form class="form-inline">
                    <div class="form-group">
                        <label id="chargeableHoursInfoLbl" class="modalLbl" for="chargeableHoursInfoTxt">Chargeable Hours: </label>
                        <label id="chargeableHoursInfoTxt"></label>
                    </div>
                </form>
                <form class="form-inline">
                    <div class="form-group">
                        <label id="nonchargeableHoursInfoLbl" class="modalLbl" for="nonchargeableHoursInfoTxt">Non-Chargeable Hours: </label>
                        <label id="nonchargeableHoursInfoTxt"></label>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Event -->
<div class="modal fade" id="eventModal" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title"></h4>
            </div>
            <div class="modal-body">
                <form class="form-inline">
                    <div class="form-group">
                        <label for="userNameModal">User Name</label>
                        <input class="form-control" id="userNameModal" disabled />
                    </div>
                </form>
                <form class="form-inline">
                    <div class="form-group">
                        <label for="workItemTimesheet">Work Item</label>
                        <input class="form-control" id="workItemTimesheet" disabled />
                    </div>
                </form>
                <form class="form-inline">
                    <div class="form-group">
                        <label for="dayTimesheet">Day</label>
                        <input class="form-control" id="dayTimesheet" disabled />
                    </div>
                </form>
                <form class="form-inline">
                    <div class="form-group">
                        <label for="titleTimesheet">Title</label>
                        <input class="form-control" id="titleTimesheet" />
                    </div>
                </form>
                <form class="form-inline">
                    <div class="form-group">
                        <label for="chargeableTimesheet">Chargeable Hours</label>
                        <input type="number" value="7.5" min="0" max="7.5" step="0.5" class="form-control" id="chargeableTimesheet" />
                    </div>
                </form>
                <form class="form-inline">
                    <div class="form-group">
                        <label for="nonchargeableTimesheet">Non Chargeable Hours</label>
                        <input type="number" value="0.0" min="0" max="7.5" step="0.5" class="form-control" id="nonchargeableTimesheet" />
                    </div>
                </form>
                <form class="form-inline">
                    <div class="form-group">
                        <label for="workItemsLinkedTimesheet">Work Items Linked</label>
                        <input class="form-control" id="workItemsLinkedTimesheet" placeholder="Link work items" disabled />
                    </div>
                </form>
                <form class="form-inline">
                    <div class="form-group">
                        <label for="descriptionTimesheet">Description</label>
                        <textarea class="form-control" id="descriptionTimesheet" placeholder="Description..." rows="3"></textarea>
                    </div>
                </form>
                <form class="form-inline">
                    <div class="form-group">
                        <label for="closeTaskTimesheet">Close Task</label>
                        <select class="form-control" id="closeTaskTimesheet"></select>
                    </div>
                </form>
                <form class="form-inline urlLinkTfs">
                    <div class="form-group">
                        <label for="linkOriginalUrlTimesheet">Link Original Task</label>
                        <a id="linkOriginalUrlTimesheet" target="_blank" href="" title="Original task url - redirect to TFS">Click to redirect to TFS</a>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btnSaveEvent" type="button" class="btn btn-success" data-dismiss="modal">Save</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modalPleaseWait"><!-- Place at bottom of page --></div>

<script id="templateTimesheetTable" type="x-tmpl-mustache">
    <table id="timesheetTable" class="table table-striped">
        <thead>
            <tr>
                <th></th>
                <th>Day</th>
                <th>Work Item</th>
                <th>Description</th>
                <th>Chargeable Hours</th>
                <th>Non Chargeable Hours</th>
                <th>Comment</th>
            </tr>
        </thead>

        {{#rows}}
        <tbody>
            <tr data-toggle='tooltip' id="row{{Id}}" title='{{tooltipDay}}' class='{{classRow}}' data>

                @*RADIOBUTTON*@
                <td class='radioTd'>
                    <div class='radio'>
                        <label><input type='radio' name='optradio' class='chk-day' id='{{Id}}' {{disableFlag}}></label>
                    </div>
                </td>

                @*DAY*@
                <td>
                    <div><label class="dayListView" data-toggle='tooltip' --title='{{day}}' id='dayTimesheet{{Id}}'>{{dayShortFormat}}</label></div>
                </td>

                @*WORKITEM*@
                <td>
                    <div><label id='workitem{{Id}}'>{{workItem}}</label></div>
                </td>

                @*DESCRIPTION*@
                <td>
                    <div><label id='description{{Id}}'>{{description}}</label></div>
                </td>

                @*CHARGEABLE HOURS*@
                <td>
                    <div><label class="chargeablehoursCls" id='chargeablehours{{Id}}'>{{chargeableHours}}</label></div>
                </td>

                @*NON-CHARGEABLE HOURS*@
                <td>
                    <div><label class="nonchargeablehoursCls" id='nonchargeablehours{{Id}}'>{{nonchargeableHours}}</label></div>
                </td>

                @*COMMENTS*@
                <td>
                    <div><label id='comments{{Id}}'>{{comments}}</label></div>
                </td>
            </tr>
        </tbody>
        {{/rows}}

    </table>
</script>
